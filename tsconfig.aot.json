{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "./public/js/app"
  },
  "typeRoots": [
    "node_modules/**"
  ],
  "lib": [
    "es5",
    "dom"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": true
  }
}
